[Unit]
Description=Media Manager Service
After=network.target

[Service]
Type=simple
User=%USER%
WorkingDirectory=%WORKDIR%
Environment="PATH=%WORKDIR%/venv/bin"
Environment="PYTHONPATH=%WORKDIR%"
ExecStart=%WORKDIR%/venv/bin/python3 -m src.app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 